<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
</head>
<body>
    <div class="navbar-fixed">
        <nav class="purple darken-2">
            <div class="nav-wrapper container">
                @Html.ActionLink("PurpleNetwork", "Info", "Home", new { area = "" }, new { @class = "brand-logo" })
                <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down">
                    <li>@Html.ActionLink("My page", "Info", "Home",null, new { @class = "home-link" })</li>
                    <li>@Html.ActionLink("Subscriptions", "Subscriptions", "Home", null, new { @class = "subscriptions-link" })</li>
                    <li>@Html.ActionLink("Feed", "Feed", "Home", null, new { @class = "feed-link" })</li>
                    <li>@Html.ActionLink("Search", "Search", "Home", null, new { @class = "search-link" })</li>
                    <li>@Html.ActionLink("Messages", "Messages", "Home", null, new { @class = "messages-link" })</li>
                    <li>@Html.ActionLink("Settings", "Settings", "Home", null, new { @class = "settings-link" })</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Log Out", "Logout", "Account")</li>
                    }
                </ul>
            </div>
        </nav>
    </div>

    <ul class="sidenav" id="mobile-demo">
        <li>@Html.ActionLink("My page", "Info", "Home", null, new { @class = "home-link" })</li>
        <li>@Html.ActionLink("Subscriptions", "Subscriptions", "Home", null, new { @class = "subscriptions-link" })</li>
        <li>@Html.ActionLink("Feed", "Feed", "Home", null, new { @class = "feed-link" })</li>
        <li>@Html.ActionLink("Search", "Search", "Home", null, new { @class = "search-link" })</li>
        <li>@Html.ActionLink("Messages", "Messages", "Home", null, new { @class = "messages-link" })</li>
        <li>@Html.ActionLink("Settings", "Settings", "Home", null, new { @class = "settings-link" })</li>
        @if (User.Identity.IsAuthenticated)
        {
            <li>@Html.ActionLink("Log Out", "Logout", "Account")</li>
        }
    </ul>

    <div id="scrollToTopBtn"><a class="btn-floating btn-large waves-effect waves-light grey lighten-1"><i class="material-icons">arrow_upward</i></a></div>

    <div class="container main">
        @RenderBody()
    </div>


    <footer class="page-footer purple darken-3">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Footer Content</h5>
                    <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5 class="white-text">Links</h5>
                    <ul>
                        <li>@Html.ActionLink("My page", "Info", "Home", null, new { @class = "grey-text text-lighten-3" })</li>
                        <li>@Html.ActionLink("Subscriptions", "Subscriptions", "Home", null, new { @class = "grey-text text-lighten-3" })</li>
                        <li>@Html.ActionLink("Feed", "Feed", "Home", null, new { @class = "grey-text text-lighten-3" })</li>
                        <li>@Html.ActionLink("Search", "Search", "Home", null, new { @class = "grey-text text-lighten-3" })</li>
                        <li>@Html.ActionLink("Messages", "Messages", "Home", null, new { @class = "grey-text text-lighten-3" })</li>
                        <li>@Html.ActionLink("Settings", "Settings", "Home", null, new { @class = "grey-text text-lighten-3" })</li>                      
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                <p>&copy; @DateTime.Now.Year – developed dy dmyhun@gmail.com</p>                
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
    <script src="~/Scripts/jquery.nicescroll.min.js"></script>
    <script src="~/Scripts/jquery.nicescroll.iframehelper.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/scrollToTop.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
